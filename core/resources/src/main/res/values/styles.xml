    <style name="Button.Full" parent="Button">
        <item name="android:background">@drawable/bg_btn_full</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RadioButton" parent="ApplicationTheme.RadioButton">
        <item name="android:theme">@style/RadioButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:button">@null</item>
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/default_margin_10</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textColor">@color/colorText</item>
<!--        <item name="android:textColorHint">@color/bg_edit_text_hint</item>-->
    </style>

    <style name="EditText.Theme">
        <item name="android:theme">@style/ApplicationTheme.EditText</item>
        <item name="android:background">@drawable/bg_btn_empty</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:padding">@dimen/default_margin_8</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Login">
        <item name="android:paddingBottom">@dimen/default_margin_4</item>
<!--        <item name="android:background">@drawable/bg_edit_text_login</item>-->
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="EditText.Login.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="LoginTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:theme">@style/ApplicationTheme.TextInputLayout</item>
    </style>

    <style name="TextFieldInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="errorTextAppearance">@style/ErrorTextAppearance</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="counterTextColor">@color/colorHint</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/colorError</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
<!--        <item name="android:textColor">@color/bg_edit_text_hint</item>-->
    </style>

    <style name="AlertDialog.Theme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialog.ButtonColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialog.ButtonColor</item>
    </style>

    <style name="AlertDialog.ButtonColor" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Matisse.Zhihu.Custom">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorPrimary</item>
        <item name="item.checkCircle.backgroundColor">@color/colorPrimary</item>
    </style>

</resources>
