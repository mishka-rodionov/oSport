<resources>

    <!-- Base application theme. -->
    <style name="ApplicationTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>
        <!--        <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/default_margin_8</item>
        <item name="android:paddingEnd">@dimen/default_margin_8</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0</item>

        <item name="android:background">@drawable/bg_outlined_button</item>
        <!--        <item name="android:fontFamily">sans-serif</item>-->
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingStart">@dimen/default_margin_8</item>
        <item name="android:paddingEnd">@dimen/default_margin_8</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeWidth">@dimen/btn_border</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorHint</item>
<!--        <item name="startIconTint">@color/colorHighlight</item>-->
    </style>

    <style name="EditTextOutlined" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextInputLayoutExposed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/colorHint</item>
<!--        <item name="startIconTint">@color/colorHighlight</item>-->
    </style>

    <style name="AutocompleteViewOutlined" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>
<!--        <item name="android:windowBackground">@drawable/bg_splash</item>-->
    </style>

    <style name="ApplicationTheme.RadioButton">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ApplicationTheme.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ApplicationTheme.HorizontalProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ApplicationTheme.TextInputLayout">
        <item name="colorAccent">@color/colorPrimary</item>
<!--        <item name="android:textColorHint">@color/bg_edit_text_hint</item>-->
        <item name="colorError">@color/colorDarkError</item>
    </style>

    <style name="ApplicationTheme.EditText">
        <item name="colorControlNormal">@color/colorView</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorError">@color/colorDarkError</item>
    </style>

    <style name="PrimaryActionButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textColor">@color/colorLightHint</item>
    </style>

    <style name="Text.16">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.18">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="Text.20">
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Text.WhiteLightTransparent">
        <item name="android:textColor">@color/colorWhiteLightTransparent</item>
    </style>

    <style name="Text.WhiteLightTransparent.12">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.Hint">
        <item name="android:textColor">@color/colorHint</item>
    </style>

    <style name="Text.Hint.12">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.Hint.16">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.LightHint">
        <item name="android:textColor">@color/colorLightHint</item>
    </style>

    <style name="Text.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Text.Error">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.White.12">
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="Text.White.20">
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Bold.16">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.Bold.20">
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Text.Bold.White">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Text.Bold.White.16">
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="Text.Bold.White.20">
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="Text.Label">
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text.Bold.Primary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

