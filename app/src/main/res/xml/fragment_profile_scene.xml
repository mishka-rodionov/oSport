<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/mcvUserProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="true"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/default_margin_4"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/mcvUserProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginStart="@dimen/default_margin_16"
            android:layout_marginTop="@dimen/default_margin_16"
            android:clipToPadding="true"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:motionInterpolator="linear"
        app:duration="3000">
        <OnSwipe app:touchAnchorId="@id/mcvUserProfile"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragUp"/>
    </Transition>
</MotionScene>
