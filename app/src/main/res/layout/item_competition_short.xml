<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_competition_short_title_height"
        android:background="@drawable/bg_gradient_title"
        app:layout_constraintBottom_toBottomOf="@id/ivCompetitionShortImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvCompetitionShortTitle"
            style="@style/Text.Bold.White.20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_margin_16"
            android:gravity="center_vertical"
            tools:text="Осенний старт" />

    </FrameLayout>

    <ImageView
        android:id="@+id/ivCompetitionShortImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_competition_short_height"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCompetitionShortDate"
        style="@style/Text.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginStart="@dimen/default_margin_16"
        app:layout_constraintTop_toBottomOf="@id/ivCompetitionShortImage"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        tools:text="05.05.2021" />

    <TextView
        android:id="@+id/tvCompetitionShortDateLabel"
        style="@style/Text.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCompetitionShortDate"
        app:layout_constraintStart_toStartOf="@id/tvCompetitionShortDate"
        android:gravity="center_vertical"
        android:text="@string/common_date_label" />

    <TextView
        android:id="@+id/tvCompetitionShortTime"
        style="@style/Text.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginEnd="@dimen/default_margin_16"
        app:layout_constraintTop_toBottomOf="@id/ivCompetitionShortImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        tools:text="11:00" />

    <TextView
        android:id="@+id/tvCompetitionShortTimeLabel"
        style="@style/Text.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCompetitionShortTime"
        app:layout_constraintEnd_toEndOf="@id/tvCompetitionShortTime"
        android:gravity="center_vertical"
        android:text="@string/common_time_label" />

    <TextView
        android:id="@+id/tvCompetitionShortDetailsLabel"
        style="@style/Text.18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_16"
        android:layout_marginStart="@dimen/default_margin_16"
        app:layout_constraintTop_toBottomOf="@id/tvCompetitionShortDateLabel"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        android:text="@string/common_detail_information_label" />

    <TextView
        android:id="@+id/tvCompetitionShortDetails"
        style="@style/Text.Hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCompetitionShortDetailsLabel"
        app:layout_constraintStart_toStartOf="@id/tvCompetitionShortDetailsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical"
        tools:text="Предисловие: Наконец появилась возможность добраться до интернета, сейчас мы находимся в Панамском канале и здесь есть wifi. Я на судне уже больше месяца и пока я здесь, я писал все интересное что здесь происходит и вот наконец есть возможность этим поделиться. Фотографий пока не будет, их я выложу или позже, или уже когда вернусь домой. Итак, понеслась:" />


</androidx.constraintlayout.widget.ConstraintLayout>