<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin_16"
    android:layout_marginTop="@dimen/default_margin_16"
    android:layout_marginEnd="@dimen/default_margin_16"
    android:layout_marginBottom="@dimen/default_margin_16"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEventDate"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8"
            android:layout_marginBottom="@dimen/default_margin_8"
            android:drawableStart="@drawable/ic_calendar_date"
            android:drawablePadding="@dimen/default_margin_16"
            android:gravity="center_vertical"
            tools:text="09.05.2020" />

        <TextView
            android:id="@+id/tvEventTime"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8"
            android:layout_marginBottom="@dimen/default_margin_8"
            android:drawableStart="@drawable/ic_event_time"
            android:drawablePadding="@dimen/default_margin_16"
            android:gravity="center_vertical"
            tools:text="11 : 00" />

        <TextView
            android:id="@+id/tvEventPlace"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8"
            android:layout_marginBottom="@dimen/default_margin_8"
            android:drawableStart="@drawable/ic_event_location"
            android:drawablePadding="@dimen/default_margin_16"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text=" д. Никольевка" />

        <TextView
            android:id="@+id/tvEventOrganizers"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_8"
            android:layout_marginBottom="@dimen/default_margin_8"
            android:drawableStart="@drawable/ic_event_organizers"
            android:drawablePadding="@dimen/default_margin_16"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            tools:text="ФСО г.Саратова" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivAddFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star" />

        <ImageView
            android:id="@+id/ivEventRegistrationDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_done" />

        <ImageView
            android:id="@+id/ivEventIsCanceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_important_info" />

    </LinearLayout>

</LinearLayout>