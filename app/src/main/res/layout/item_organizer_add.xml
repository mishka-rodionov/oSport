<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCompetitionOrganizer"
        style="@style/TextInputLayoutExposed"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/default_margin_8"
        android:hint="@string/hint_organizer"
        app:errorEnabled="true"
        app:errorTextColor="@color/colorError"
        app:helperText="@string/helper_text_organizer"
        app:helperTextEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_person">

        <AutoCompleteTextView
            android:id="@+id/etCompetitionOrganizer"
            style="@style/AutocompleteViewOutlined"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>